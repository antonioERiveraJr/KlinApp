<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgrounddesign2"
    android:layout_height="match_parent"
    tools:context=".ProductDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settingsAddProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settingsSellersForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/arrowback_ProductDetails"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@color/light"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_settingsAddProduct">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    android:id="@+id/imageDetailsLayout"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="20dp"
    android:layout_height="300dp">

    <ImageView
    android:id="@+id/productImageDetails"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_centerHorizontal="true"
    android:cropToPadding="false"
    android:scaleType="centerCrop"
    android:src="@drawable/addproductimageicon" />

</androidx.cardview.widget.CardView>


            <EditText
                android:id="@+id/product_name_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageDetailsLayout"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Product Name"
                android:textSize="18sp" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/product_price_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:text="Product Price"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/product_description_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price_details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:text="Product Details"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/product_location_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_description_details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:text="Product Location"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <EditText
                android:id="@+id/sellers_phoneNumber_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:layout_below="@+id/product_location_details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Phone Number" />

            <EditText
                android:id="@+id/sellers_posted_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:layout_below="@+id/sellers_phoneNumber_details"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Date Posted" />

            <EditText
                android:id="@+id/sellers_posted_time"
                android:layout_width="match_parent"
                android:background="@drawable/textviewbackground"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sellers_posted_date"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Working day"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputlayout2"
                android:layout_below="@id/sellers_posted_time"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/textviewbackground"

                app:boxBackgroundColor="@color/text_background"
                android:textColorHint="@color/text_color"
                android:hint="Listed By">

                <EditText
                    android:id="@+id/ListerName"
                    android:editable="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background2"
                    android:drawableTint="@color/button_background_green"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10dp"
                    android:text="Full Name"
                    android:textColor="@color/text_color" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/message_seller_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inputlayout2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="50dp"
                android:padding="17dp"
                android:text="Accept Request"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background"
                android:textSize="15sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>