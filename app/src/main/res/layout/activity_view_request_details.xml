<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddesign2"
    tools:context=".ViewRequestDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settingsAddProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lime_green">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settingsSellersForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light">
            <ImageButton
                android:id="@+id/arrowback_View"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@color/light"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                app:tint="@color/white" />
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_settingsAddProduct">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/productImageDetailslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:id="@+id/productImageViewDetails"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/addproductimageicon" />


            </androidx.cardview.widget.CardView>
            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/product_name_lister2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/productImageDetailslayout"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Lister"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">

            <EditText
                android:id="@+id/product_name_lister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/productImageDetailslayout"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Request Lister"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/product_name_Viewdetails2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/product_name_lister2"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Name"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">

            <EditText
                android:id="@+id/product_name_Viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_lister2"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Request Name"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/product_price_Viewdetails2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/product_name_Viewdetails2"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Price"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">


            <EditText
                android:id="@+id/product_price_Viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_Viewdetails2"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="number"
                android:padding="20dp"
                android:text="Request Price"
                android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/product_description_Viewdetails2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/product_price_Viewdetails2"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Details"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/product_description_Viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price_Viewdetails2"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Request Details"
                android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/product_location_Viewdetails2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/product_description_Viewdetails2"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Location"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/product_location_Viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_description_Viewdetails2"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Request Location"
                android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/sellers_phoneNumber_Viewdetails2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/product_location_Viewdetails2"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Phone Number"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/sellers_phoneNumber_Viewdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_location_Viewdetails2"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="number"
                android:padding="20dp"
                android:text="Phone Number"
                android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/sellers_posted_Viewdate2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/sellers_phoneNumber_Viewdetails2"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Request Posted"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/sellers_posted_Viewdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sellers_phoneNumber_Viewdetails2"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Request Posted"
                android:textColor="@color/text_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/sellers_posted_Viewtime2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/sellers_posted_Viewdate2"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:hint="Working Day"
                android:layout_gravity="center"
                app:boxBackgroundColor="@color/white">
            <EditText
                android:id="@+id/sellers_posted_Viewtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sellers_posted_Viewdate2"
                android:background="@drawable/textviewbackground"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Working Day"
                android:textColor="@color/text_color"

                />
            </com.google.android.material.textfield.TextInputLayout>






            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_below="@id/sellers_posted_Viewtime2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp" >


                <Button
                    android:id="@+id/startButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="20dp"
                    android:paddingHorizontal="50dp"
                    android:background="@drawable/button_background"
                    android:text="Start" />

                <Button
                    android:id="@+id/stopButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/button_background"
                    android:paddingHorizontal="50dp"
                    android:layout_margin="20dp"
                    android:text="Stop" />

                <TextView
                    android:id="@+id/textCounter"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_margin="40dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/completed"
                android:layout_width="match_parent"
                android:layout_below="@id/sellers_posted_Viewtime2"
                android:visibility="gone"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="250dp">

                <TextView
                    android:id="@+id/trasactiontxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/text_color"
                    android:layout_alignParentTop="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="TRANSACTION"/>
                <TextView
                    android:id="@+id/txtbefore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEFORE"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="70dp"
                    android:layout_below="@+id/trasactiontxt"
                    android:layout_alignParentLeft="true"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/txtafter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AFTER"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="70dp"
                    android:layout_below="@+id/trasactiontxt"
                    android:layout_alignParentRight="true"
                    android:textSize="12dp"/>

                <ImageView
                    android:id="@+id/before"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/txtbefore"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/addproductimageicon" />

                <ImageView
                    android:id="@+id/after"
                    android:layout_width="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtafter"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/addproductimageicon" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:text="PRICE"
                    android:textColor="@color/text_color"
                    android:textSize="15dp"
                    android:layout_below="@id/before"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="0dp"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>